<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RealEstate.Pages.WelcomePage"
             Title="WelcomePage">
    <VerticalStackLayout VerticalOptions="Center"
                         Margin="20,0,20,0"
                         Spacing="20">
        <Image Source="reapplogo"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               HeightRequest="200"
               WidthRequest="200"/>
        <Label Text="Welcome!"
               TextColor="#101010"
               FontSize="Large"
               HorizontalOptions="Center"/>
        <Label Text="REAL ESTATE APP"
                   FontSize="Large"
                   TextColor="#1d94ab"
               HorizontalOptions="Center"/>
        <Button x:Name="BtnLogin"
                Text="Continue"
                HeightRequest="50"
                FontSize="Medium"
                BackgroundColor="#1d94ab"
                Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>